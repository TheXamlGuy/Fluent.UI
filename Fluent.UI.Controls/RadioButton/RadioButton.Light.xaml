                                    Stroke="{StaticResource RadioButtonOuterEllipseStroke}"
                                    StrokeThickness="{StaticResource RadioButtonBorderThemeThickness}"
                                    UseLayoutRounding="False" />
                                <Ellipse
                                    x:Name="CheckOuterEllipse"
