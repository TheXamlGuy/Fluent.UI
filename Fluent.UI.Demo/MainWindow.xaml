<Window
    x:Class="Fluent.UI.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentDialog x:Name="ContentDialogXAML" PrimaryButtonText="Primary Button" />
        <StackPanel Grid.Column="0">
            <CheckBox x:Name="d" Checked="D_Checked" Content="Switch to dark theme" Unchecked="D_Unchecked" />
            <Border
                x:Name="ThemeBackground"
                Padding="50">
                <Button
                    x:Name="Button1"
                    Margin="0,0,0,8"
                    Content="Open from code behind" />
            </Border>

            <Button
                x:Name="Button2"
                Margin="0,0,0,8"
                Content="Open from XAML" />
            <Button x:Name="Button3" Content="Show in place" />
            <TextBox />
        </StackPanel>
        <Border
            Grid.Column="1"
            Width="400"
            Height="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Red">
            <ContentDialog x:Name="ContentDialogInPlace" PrimaryButtonText="Primary Button" />
        </Border>
    </Grid>
</Window>