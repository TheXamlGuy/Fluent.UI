<Window
    x:Class="Fluent.UI.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <CheckBox
                x:Name="CheckBox1"
                Grid.Row="0"
                Checked="CheckBox1_Checked"
                Content="Switch to dark theme"
                Unchecked="CheckBox1_Unchecked" />
            <Border
                x:Name="Border1"
                Grid.Row="1"
                Padding="10"
                BorderBrush="Red"
                BorderThickness="5">
                <StackPanel>
                    <Button
                        x:Name="Button"
                        Margin="0,0,0,10"
                        Content="Button" />
                    <Border
                        Padding="10"
                        BorderBrush="Red"
                        BorderThickness="5">
                        <StackPanel Margin="10">
                            <TextBox
                                Margin="0,0,0,10"
                                TextBoxExtension.Description="This is a description"
                                TextBoxExtension.Header="Header text" />
                            <TextBox
                                Margin="0,0,0,10"
                                IsEnabled="False"
                                TextBoxExtension.Header="Header text" />
                            <TextBox
                                Margin="0,0,0,10"
                                IsEnabled="False"
                                TextBoxExtension.PlaceholderText="placeholder text" />
                            <TextBox
                                Margin="0,0,0,10"
                                IsEnabled="False"
                                TextBoxExtension.PlaceholderText="Hello world">
                                <TextBoxExtension.HeaderTemplate>
                                    <DataTemplate>
                                        <Button Content="Header template" />
                                    </DataTemplate>
                                </TextBoxExtension.HeaderTemplate>
                            </TextBox>
                            <TextBox Margin="0,0,0,10" TextBoxExtension.PlaceholderText="Hello world">
                                <TextBoxExtension.HeaderTemplate>
                                    <DataTemplate>
                                        <Button Content="Header template" />
                                    </DataTemplate>
                                </TextBoxExtension.HeaderTemplate>
                            </TextBox>
                            <Button Margin="0,0,0,10" Content="Button" />
                            <Button Margin="0,0,0,10" Content="Button" />
                            <Button Margin="0,0,0,10" Content="Button" />
                            <Button Margin="0,0,0,10" Content="Button" />
                            <Button Margin="0,0,0,10" Content="Button" />
                            <Border
                                Padding="10"
                                BorderBrush="Red"
                                BorderThickness="5">
                                <Grid Margin="20">
                                    <WrapPanel>
                                        <Button
                                            Margin="0,0,0,10"
                                            Content="Disabled"
                                            IsEnabled="False" />
                                        <Button Margin="0,0,0,10" Content="Button" />
                                        <Button
                                            Margin="0,0,0,10"
                                            ButtonExtension.RequestedTheme="Light"
                                            Content="Button111" />
                                        <Button Margin="0,0,0,10" Content="Button" />
                                        <Button Margin="0,0,0,10" Content="Button" />
                                    </WrapPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>