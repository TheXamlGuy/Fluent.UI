<Window x:Class="Fluent.UI.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fluent.UI.Demo"
        xmlns:controls="clr-namespace:Fluent.UI.Controls;assembly=Fluent.UI.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Height="400" Width="400" Background="Red" HorizontalAlignment="Left">
            <controls:ContentDialog x:Name="ContentDialogInPlace" PrimaryButtonText="Primary Button" />
        </Border>
        <controls:ContentDialog x:Name="ContentDialogXAML" PrimaryButtonText="Primary Button" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Button1"  Content="Open from code behind"></Button>
            <Button x:Name="Button2"  Content="Open from XAML"></Button>
            <Button x:Name="Button3"  Content="Show in place"></Button>
        </StackPanel>
    </Grid>
</Window>
