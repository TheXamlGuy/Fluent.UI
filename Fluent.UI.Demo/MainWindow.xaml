<Window
    x:Class="Fluent.UI.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CheckBox
            x:Name="CheckBox1"
            Grid.Row="0"
            Checked="CheckBox1_Checked"
            Content="Switch to dark theme"
            Unchecked="CheckBox1_Unchecked" />
        <Border
            x:Name="Border1"
            Grid.Row="1"
            BorderThickness="5"
            BorderBrush="Red"
            Padding="10">
            <StackPanel>
                <Button x:Name="Button" Content="Button" Margin="0 0 0 10" />
                <Border BorderThickness="5"
                        BorderBrush="Red"
                        Padding="10">
                    <StackPanel Margin="10">
                        <TextBox  Margin="0 0 0 10"/>
                        <Button Content="Button" Margin="0 0 0 10" />
                        <Button Content="Button" Margin="0 0 0 10" />
                        <Button Content="Button" Margin="0 0 0 10" />
                        <Button Content="Button" Margin="0 0 0 10" />
                        <Button Content="Button" Margin="0 0 0 10" />
                        <Border BorderThickness="5"
                        BorderBrush="Red"
                        Padding="10">
                            <Grid Margin="20">
                                <WrapPanel>
                                    <Button Content="Disabled" Margin="0 0 0 10" IsEnabled="False" />
                                    <Button Content="Button" Margin="0 0 0 10" />
                                    <Button Content="Button111" ButtonExtension.RequestedTheme="Light"  Margin="0 0 0 10" />
                                    <Button Content="Button" Margin="0 0 0 10" />
                                    <Button Content="Button" Margin="0 0 0 10" />
                                </WrapPanel>
                            </Grid>
                        </Border>
      
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Window>